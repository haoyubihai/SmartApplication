<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_margin="16dp"
        android:id="@+id/choiceBg"
        android:orientation="horizontal"
        android:background="@drawable/choice_normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:padding="16dp"
        android:layout_height="wrap_content">
        <TextView
            android:background="@drawable/answer_bg_normal"
            android:text="A"
            android:gravity="center"
            android:id="@+id/tvAnswer"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:textColor="@color/answer_tv_color_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_toRightOf="@+id/tvAnswer"
            android:id="@+id/tvAnswerItem"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:textColor="@color/answer_item_color"
            tools:text="handbag"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/ivAnswer"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tvAnswer"
            android:layout_alignParentRight="true"
            android:src="@mipmap/demo_pic1"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/ivArrow"
        android:padding="4dp"
        android:src="@drawable/ic_ok_arrow"
        android:layout_margin="8dp"
        android:visibility="gone"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/checked_right_bg"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>